<div class="author">
  <h1 class="author_heading">Hi, I am Nur Pelin</h1>
  <p class="author-body">Web developer and content creator.</p>
</div>

<img
  src="/img/webdev.jpg"
  alt="web developer"
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles_heading">Latest Posts</h2>

  <% data.forEach(post => { %>

  <ul class="article-ul">
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list-date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>
  <% if (nextPage !== null) { %>

  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>

  <% } %> <% if (nextPage !== 2) { %>

  <a href="/?page=<%= current-1 %>" class="pagination">&lt; View Newer Posts</a>
  <% } %>
</section>
